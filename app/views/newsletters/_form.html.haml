.block
  .mb-10
    %h1 
      = t('newsletter.title')

  .p-4
    = simple_form_for  @newsletter, data: { turbo:false }, class: 'form_box' do |f|
      .form__box
        .form_field
          = f.label 'email'
          = f.text_field :email
      %h3 
        = t('newsletter.form.preferences')

      .form__box
        .form_field
          = f.check_box :women_fashion
          = f.label :women_fashion, t('newsletter.form.women_fashion')

      .form__box
        .form_field
          = f.check_box :men_fashion
          = f.label :men_fashion, t('newsletter.form.men_fashion')

      .form__box
        .form_field
          = f.check_box :children_fashion
          = f.label :children_fashion, t('newsletter.form.children_fashion')
      
      = f.submit t('newsletter.form.button'), class: "bg-blue-500 text-white py-2 px-4"
